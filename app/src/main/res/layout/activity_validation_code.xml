<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activities.ValidationCode">
    <EditText
        android:layout_marginTop="@dimen/_80sdp"
        android:id="@+id/Validation_cod_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:textSize="@dimen/_24sdp"
        android:text="كود االتحقق
" />


    <EditText
        android:layout_marginTop="@dimen/_18sdp"
        android:id="@+id/Validation_cod_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:gravity="center"
        android:inputType="number"
        android:hint="Enter the verification code
" />

    <Button
        android:layout_marginTop="@dimen/_18ssp"
        android:id="@+id/Validation_cod_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="Validation" />
</LinearLayout>