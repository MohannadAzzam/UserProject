<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2sdp"
    android:fitsSystemWindows="true"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/order_id_linearhorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:weightSum="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/cart_order_iv"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/apple" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/order_id_linearvertical_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/order_id_linearhorizontal_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/order_id_textview_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/jf"
                            android:gravity="center"
                            android:text="السعر"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/cart_order_tv_price"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/jf"
                            android:gravity="center"
                            android:text="25 شيكل"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/order_id_linearhorizontal_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/order_id_textview_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/jf"
                            android:gravity="center"
                            android:text="الاسم"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/cart_order_tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/jf"
                            android:gravity="center"
                            android:text="تفاح"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/cart_minus_iv"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_remove"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/cart_quantity_tv"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <ImageView
                            android:id="@+id/cart_plus_iv"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_add"
                            app:tint="@color/black" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/order_id_textview_orderdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    app:srcCompat="@drawable/ic_close"
                    app:tint="@color/black" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/order_id_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:visibility="gone">

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>